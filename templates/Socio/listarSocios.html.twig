{% extends 'base.html.twig' %}

{% block title %}
    Listado de socios
{% endblock %}

{% block body %}
    <h1>Listado de socios</h1>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>DNI</th>
        </tr>
        </thead>
        <tbody>
        {% for socio in socios %}
            <tr>
                {% set url = path('socio_accesos', { 'id': socio.id })  %}
                <td><a href="{{ url }}"> {{ socio.apellidos }}, {{ socio.nombre }} </a></td>
                <td>{{ socio.dni }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No hay ning√∫n socio registrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}